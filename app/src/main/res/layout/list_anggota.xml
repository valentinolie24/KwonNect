<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="6dp"
    app:cardCornerRadius="15dp"
    android:elevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_foto"
            android:layout_width="75dp"
            android:layout_height="90dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/iv_foto"
                android:layout_width="75dp"
                android:layout_height="90dp"
                android:src="@mipmap/ic_launcher"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Anggota"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/cv_foto"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_npm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Npm Anggota"
            android:layout_below="@id/tv_nama"
            android:layout_toRightOf="@id/cv_foto"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_prodi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prodi Anggota"
            android:layout_below="@id/tv_npm"
            android:layout_toRightOf="@id/cv_foto"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/tv_sabuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sabuk Anggota"
            android:layout_below="@id/tv_prodi"
            android:layout_toRightOf="@id/cv_foto"
            android:layout_marginLeft="10dp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>