<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="250dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="15dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/iv_foto"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Anggota"
            android:layout_marginTop="50dp"
            android:padding="6dp"
            style="@style/TextAppearance.AppCompat.Title"/>

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Anggota"
            android:padding="6dp"
            style="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:padding="6dp"
            style="@style/TextAppearance.AppCompat.Title"/>

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Anggota"
            android:padding="6dp"
            style="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Npm"
            android:padding="6dp"
            style="@style/TextAppearance.AppCompat.Title"/>

        <TextView
            android:id="@+id/tv_npm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Npm Anggota"
            android:padding="6dp"
            style="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prodi"
            android:padding="6dp"
            style="@style/TextAppearance.AppCompat.Title"/>

        <TextView
            android:id="@+id/tv_prodi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prodi Anggota"
            android:padding="6dp"
            style="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sabuk"
            android:padding="6dp"
            style="@style/TextAppearance.AppCompat.Title"/>

        <TextView
            android:id="@+id/tv_sabuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sabuk Anggota"
            android:padding="6dp"
            style="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempat Lahir"
            android:padding="6dp"
            style="@style/TextAppearance.AppCompat.Title"/>

        <TextView
            android:id="@+id/tv_tempatLahir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempat Lahir"
            android:padding="6dp"
            style="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Lahir"
            android:padding="6dp"
            style="@style/TextAppearance.AppCompat.Title"/>

        <TextView
            android:id="@+id/tv_tanggalLahir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Lahir"
            android:padding="6dp"
            style="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tinggi Badan"
            android:padding="6dp"
            style="@style/TextAppearance.AppCompat.Title"/>

        <TextView
            android:id="@+id/tv_tinggiBadan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tinggi Badan"
            android:padding="6dp"
            style="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berat Badan"
            android:padding="6dp"
            style="@style/TextAppearance.AppCompat.Title"/>

        <TextView
            android:id="@+id/tv_beratBadan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Berat Badan"
            android:padding="6dp"
            style="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Whatsapp"
            android:padding="6dp"
            style="@style/TextAppearance.AppCompat.Title"/>

        <TextView
            android:id="@+id/tv_noWhatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Whatsapp"
            android:padding="6dp"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginBottom="40dp"/>

    </LinearLayout>

</ScrollView>